{
    "window": {
        "width": 1280,
        "height": 720,
        "title": "Game Engine",
        "fullscreen": false,
        "vsync": false,
        "target_fps": 0
    },
    "console": {
        "enabled": true,
        "font_size": 14,
        "background_alpha": 0.8,
        "max_lines": 20,
        "toggle_key": "GRAVE",
        "command_timeout_seconds": 120,
        "enable_command_timeout": true
    },
    "rendering": {
        "clear_color": [64, 64, 64, 255]
    },
    "scripting": {
        "lua_enabled": true,
        "auto_reload": true,
        "script_directory": "scripts/"
    }
}