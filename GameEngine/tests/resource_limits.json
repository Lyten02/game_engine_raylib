{
  "description": "Resource limits for test execution to prevent system overload",
  "global_limits": {
    "max_parallel_workers": 2,
    "max_memory_mb": 2048,
    "max_cpu_percent": 50,
    "force_sequential_above_load": 2.0
  },
  "category_limits": {
    "lightweight": {
      "max_workers": 2,
      "timeout_seconds": 30,
      "memory_limit_mb": 256
    },
    "build": {
      "max_workers": 1,
      "timeout_seconds": 180,
      "memory_limit_mb": 1024
    },
    "heavy": {
      "max_workers": 1,
      "timeout_seconds": 120,
      "memory_limit_mb": 512
    },
    "command": {
      "max_workers": 2,
      "timeout_seconds": 10,
      "memory_limit_mb": 128
    },
    "script": {
      "max_workers": 1,
      "timeout_seconds": 30,
      "memory_limit_mb": 256
    }
  },
  "throttling": {
    "delay_between_tests_ms": 100,
    "delay_between_groups_ms": 500,
    "cleanup_interval_tests": 5
  }
}